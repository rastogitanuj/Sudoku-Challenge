<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tanuj.sudokugame"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/sudoku111"
        android:label="@string/app_name" 
        android:allowBackup="true">
        <activity
            android:name="tanuj.sudokugame.mymain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tanuj.sudokugame.About"
            android:label="@string/about_title" android:theme="@android:style/Theme.Dialog"/>
        
        <activity
            android:name="tanuj.sudokugame.Prefs"
            android:label="@string/settings_title" />
        
        <activity
            android:name="tanuj.sudokugame.Myplay"
            android:theme="@android:style/Theme.Dialog" />
        
        <activity
            android:name="tanuj.sudokugame.Game"
            android:label="@string/game_title" 
            android:screenOrientation="portrait"/>
        
        <activity
            android:name="tanuj.sudokugame.Stats"
            android:label="STATISTICS" />
        
        <activity
            android:name="tanuj.sudokugame.Rules"
            android:label="RULES" 
            android:theme="@android:style/Theme.Dialog"/>
        
        <activity
            android:name="tanuj.sudokugame.NewUser"
            android:label="@string/game_title" 
            android:theme="@android:style/Theme.Dialog" />
        
        <activity
            android:name="tanuj.sudokugame.ChangeUser"
            android:label="Change User" 
            android:theme="@android:style/Theme.Dialog" />
    </application>

    <uses-sdk android:minSdkVersion="8" />

</manifest>